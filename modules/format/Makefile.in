# Get common definitions
include ../../Makefile.inc

all:
	for i in `ls -d * | grep -v common` ;\
	do ( if [ -d $$i ] && [ ! -h $$i ] && [ "$$i" != "RCS" ]; then \
	  ( echo '>>' $$i ; cd $$i ; ${MAKE} ) ; fi ) ;\
	done

install-remote:

install:
	for i in `ls -d * | grep -v common` ;\
	do ( if [ -d $$i ] && [ ! -h $$i ] && [ "$$i" != "RCS" ]; then \
          ( echo '>>' $$i ; cd $$i ; ${MAKE} install ) ; fi ) ;\
	done

veryclean: clean
	for i in `ls -d * | grep -v common` ;\
	do ( if [ -d $$i ] && [ ! -h $$i ] && [ "$$i" != "RCS" ]; then \
          ( echo '>>' $$i ; cd $$i ; ${MAKE} veryclean ) ; fi ) ;\
	done

clean:
	for i in `ls -d * | grep -v common` ;\
	do ( if [ -d $$i ] && [ ! -h $$i ] && [ "$$i" != "RCS" ]; then \
	  ( echo '>>' $$i ; cd $$i ; ${MAKE} clean ) ; fi ) ;\
	done


